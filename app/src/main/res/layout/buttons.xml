<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="5"
        android:background="#000"
        >

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnClear"
            android:text="C"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/ComplexOperatorText"
            android:background="@color/ComplexOperatorBG"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnSqr"
            android:text="^"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/SimpleOperatorText"
            android:background="@color/SimpleOperatorBG"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnMultiply"
            android:text="X"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/SimpleOperatorText"
            android:background="@color/SimpleOperatorBG"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnBack"
            android:text="DEL"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/ComplexOperatorText"
            android:background="@color/ComplexOperatorBG"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />


        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnAdd"
            android:text="+"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/SimpleOperatorText"
            android:background="@color/SimpleOperatorBG"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnMinus"
            android:text="-"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/SimpleOperatorText"
            android:background="@color/SimpleOperatorBG"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnDivide"
            android:text="/"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/SimpleOperatorText"
            android:background="@color/SimpleOperatorBG"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />



        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnEqual"
            android:text="="
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/ComplexOperatorText"
            android:background="@color/ComplexOperatorBG"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnZero"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnDecimal"
            android:text="."
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/ComplexOperatorText"
            android:background="@color/ComplexOperatorBG"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnDoubleZero"
            android:text="00"
            android:textSize="30dp"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

    </GridLayout>

</LinearLayout>